{
  "name": "electron-demo",
  "version": "1.0.1",
  "description": "my first electron demo",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder",
    "build-icon": "electron-icon-builder --input=./assets/icon/appIcon.png --output=build --flatten"
  },
  "author": "jiaxianmeng",
  "license": "MIT",
  "build": {
    "appId": "my.app.id",
    "productName": "electron-demo",
    "copyright": "Copyright Â© 2024 Jason",
    "asarUnpack": "**/*",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:9005/"
      }
    ],
    "files": [ 
      "build/**/*",
      "node_modules/**/*",
      "package.json",
      "main.js",
      "preload.js"
    ],
    "win": {
      "target": ["msi","nsis"],        
      "icon": "./build/icons/icon.ico"   
    },
    "nsis": {
      "oneClick": false,
      "language": "2052",
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^32.0.2",
    "electron-builder": "^25.0.5",
    "electron-icon-builder": "^2.0.1"
  },
  "dependencies": {
    "electron-updater": "^6.3.4"
  }
}
